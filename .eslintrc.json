{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "standard",
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "import/prefer-default-export": "warn",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80
      }
    ]
  },
  "plugins": [
    "import",
    "prettier"
  ]
}